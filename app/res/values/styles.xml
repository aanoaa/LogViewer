<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- button -->
	<style name="button">
		<item name="android:textColor">@color/white</item>
		<item name="android:gravity">center</item>
		<item name="android:background">@drawable/button_background</item>
		<item name="android:paddingTop">5dip</item>
		<item name="android:paddingBottom">5dip</item>
		<item name="android:paddingLeft">20dip</item>
		<item name="android:paddingRight">20dip</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">marquee</item>
	</style>
    <style name="button.radiobutton">
    	<item name="android:layout_margin">1dip</item>
    	<item name="android:button">@drawable/onepixel</item>
		<item name="android:paddingLeft">15dip</item>
		<item name="android:paddingRight">15dip</item>
    </style>
    
    <!-- textview -->
    <style name="textview">
    	<item name="android:singleLine">true</item>
    	<item name="android:ellipsize">marquee</item>
    </style>
    
    <style name="textview.form">
    	<item name="android:textStyle">bold</item>
    </style>
    
    <!-- layout -->
    <style name="layout" />
    <style name="layout.form_item">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
    	<item name="android:layout_gravity">center_vertical</item>
    	<item name="android:orientation">horizontal</item>
    	<item name="android:padding">10dip</item>
    	<item name="android:focusable">true</item>
    	<item name="android:clickable">true</item>
    	<item name="android:background">@android:drawable/list_selector_background</item>
    </style>

    <!-- imageview -->
    <style name="imageview" />
    <style name="imageview.more">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:src">@drawable/ic_btn_round_more</item>
        <item name="android:background">@drawable/btn_circle</item>
    </style>
</resources>
